{
  "name": "evolution-api",
  "description": "API para integração com WhatsApp - Deploy automático com configuração completa",
  "keywords": [
    "api",
    "whatsapp",
    "node",
    "automation"
  ],
  "website": "https://github.com/EvolutionAPI/evolution-api",
  "repository": "https://github.com/EvolutionAPI/evolution-api",
  "logo": "https://raw.githubusercontent.com/EvolutionAPI/evolution-api/main/public/evolution.png",
  "success_url": "/",
  "stack": "container",
  "env": {
    "SERVER_TYPE": {
      "description": "Tipo de servidor",
      "value": "http"
    },
    "SERVER_PORT": {
      "description": "Porta do servidor",
      "value": "8080"
    },
    "AUTHENTICATION_API_KEY": {
      "description": "Chave de API para autenticação (gerada automaticamente)",
      "generator": "secret"
    },
    "LOG_LEVEL": {
      "description": "Nível de log da aplicação",
      "value": "ERROR,WARN,DEBUG,INFO,LOG,VERBOSE"
    },
    "CORS_ORIGIN": {
      "value": "*"
    },
    "CORS_METHODS": {
      "value": "GET,POST,PUT,DELETE"
    },
    "CORS_CREDENTIALS": {
      "value": "true"
    },
    "LOG_COLOR": {
      "value": "true"
    },
    "LOG_BAILEYS": {
      "value": "error"
    },
    "EVENT_EMITTER_MAX_LISTENERS": {
      "value": "50"
    },
    "DEL_INSTANCE": {
      "value": "false"
    },
    "DATABASE_PROVIDER": {
      "value": "postgresql"
    },
    "DATABASE_CONNECTION_CLIENT_NAME": {
      "value": "evolution_exchange"
    },
    "DATABASE_SAVE_DATA_INSTANCE": {
      "value": "true"
    },
    "DATABASE_SAVE_DATA_NEW_MESSAGE": {
      "value": "true"
    },
    "DATABASE_SAVE_MESSAGE_UPDATE": {
      "value": "true"
    },
    "DATABASE_SAVE_DATA_CONTACTS": {
      "value": "true"
    },
    "DATABASE_SAVE_DATA_CHATS": {
      "value": "true"
    },
    "DATABASE_SAVE_DATA_LABELS": {
      "value": "true"
    },
    "CACHE_REDIS_ENABLED": {
      "value": "true"
    },
    "CACHE_REDIS_PREFIX_KEY": {
      "value": "evolution"
    },
    "CACHE_REDIS_TTL": {
      "value": "604800"
    },
    "WEBHOOK_GLOBAL_ENABLED": {
      "value": "false"
    },
    "WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS": {
      "value": "false"
    },
    "CONFIG_SESSION_PHONE_CLIENT": {
      "value": "Evolution API"
    },
    "CONFIG_SESSION_PHONE_NAME": {
      "value": "Chrome"
    },
    "QRCODE_LIMIT": {
      "value": "30"
    },
    "QRCODE_COLOR": {
      "value": "#175197"
    },
    "AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES": {
      "value": "true"
    },
    "DB_POSTGRESDB_SSL_REJECT_UNAUTHORIZED": {
      "value": "false"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    },
    {
      "plan": "heroku-redis:mini"
    },
    {
      "plan": "papertrail:choklad"
    }
  ],
  "buildpacks": []
}
{
  "name": "EvolutionAPI",
  "description": "A Restful API service that controls WhatsApp functions.",
  "keywords": [
    "whatsapp",
    "api",
    "restful",
    "whatsapp api"
  ],
  "website": "https://evolution-api.com/",
  "repository": "https://github.com/EvolutionAPI/evolution-api",
  "logo": "https://github.com/EvolutionAPI/evolution-api/raw/main/public/images/atendai-logo.png",
  "success_url": "/manager",
  "stack": "container",
  "env": {
    "SERVER_URL": {
      "description": "Replace <appname> with your Heroku application name.",
      "value": "https://<appname>.herokuapp.com"
    },
    "SERVER_TYPE": {
      "description": "O tipo de servidor a ser executado.",
      "value": "http"
    },
    "CORS_ORIGIN": {
      "description": "A origem para permitir solicitações CORS.",
      "value": "*"
    },
    "AUTHENTICATION_TYPE": {
      "description": "Tipo de autenticação (apikey ou jwt).",
      "value": "apikey"
    },
    "AUTHENTICATION_API_KEY": {
      "description": "Chave de API para autenticação.",
      "generator": "secret"
    },
    "DATABASE_ENABLED": {
      "description": "Habilitar banco de dados.",
      "value": "true"
    },
    "DATABASE_PROVIDER": {
      "description": "Provedor de banco de dados a ser usado.",
      "value": "postgresql"
    },
    "CACHE_REDIS_ENABLED": {
      "description": "Habilitar cache Redis.",
      "value": "true"
    },
    "NODE_ENV": {
      "description": "Ambiente de execução do Node.js.",
      "value": "production"
    },
    "NODE_OPTIONS": {
      "description": "Opções do Node.js.",
      "value": "--max-old-space-size=512"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    },
    {
      "plan": "heroku-redis:mini"
    },
    {
      "plan": "papertrail:choklad"
    }
  ],
  "buildpacks": [],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  }
}
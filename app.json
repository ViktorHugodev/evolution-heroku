{
  "name": "evolution-api",
  "description": "API para integração com WhatsApp - Deploy automático com configuração completa",
  "keywords": [
    "api",
    "whatsapp",
    "node",
    "automation"
  ],
  "website": "https://github.com/EvolutionAPI/evolution-api",
  "repository": "https://github.com/EvolutionAPI/evolution-api",
  "logo": "https://raw.githubusercontent.com/EvolutionAPI/evolution-api/main/public/evolution.png",
  "success_url": "/",
  "stack": "container",
  "env": {
    "SERVER_TYPE": {
      "description": "Tipo de servidor",
      "value": "http"
    },
    "AUTHENTICATION_API_KEY": {
      "description": "Chave de API para autenticação (gerada automaticamente)",
      "generator": "secret"
    },
    "NODE_ENV": {
      "description": "Ambiente Node.js",
      "value": "production"
    },
    "LOG_LEVEL": {
      "description": "Nível de log da aplicação",
      "value": "ERROR,WARN,DEBUG,INFO,LOG,VERBOSE"
    },
    "CORS_ORIGIN": {
      "value": "*"
    },
    "CORS_METHODS": {
      "value": "GET,POST,PUT,DELETE"
    },
    "CORS_CREDENTIALS": {
      "value": "true"
    },
    "DATABASE_PROVIDER": {
      "value": "postgresql"
    },
    "DATABASE_CONNECTION_CLIENT_NAME": {
      "value": "evolution_exchange"
    },
    "DATABASE_SAVE_DATA_INSTANCE": {
      "value": "true"
    },
    "CACHE_REDIS_ENABLED": {
      "value": "true"
    },
    "CACHE_REDIS_PREFIX_KEY": {
      "value": "evolution"
    },
    "DB_POSTGRESDB_SSL_REJECT_UNAUTHORIZED": {
      "value": "false"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    },
    {
      "plan": "heroku-redis:mini"
    },
    {
      "plan": "papertrail:choklad"
    }
  ]
}